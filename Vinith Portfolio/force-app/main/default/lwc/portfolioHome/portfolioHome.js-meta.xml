<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Portfolio Home</masterLabel>
    <description>Landing component for portfolio home. Use  in markup or add via App Builder.</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="title" type="String" label="Title" description="Heading text for the component."/>
            <property name="subtitle" type="String" label="Subtitle" description="Subtitle text under the heading."/>
            <property name="showVinith" type="Boolean" label="Show Hero section" default="true"/>
            <property name="showAbout" type="Boolean" label="Show About section" default="true"/>
            <property name="showSkills" type="Boolean" label="Show Skills section" default="true"/>
            <property name="showProjects" type="Boolean" label="Show Projects section" default="true"/>
        </targetConfig>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage">
            <property name="title" type="String" label="Title" description="Heading text for the component."/>
            <property name="subtitle" type="String" label="Subtitle" description="Subtitle text under the heading."/>
            <property name="showVinith" type="Boolean" label="Show Hero section" default="true"/>
            <property name="showAbout" type="Boolean" label="Show About section" default="true"/>
            <property name="showSkills" type="Boolean" label="Show Skills section" default="true"/>
            <property name="showProjects" type="Boolean" label="Show Projects section" default="true"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
